#!/usr/bin/env groovy
def appName= 'testing'
def major_version = 1.0
def buildnumber=BUILD_NUMBER
def file_name=${appName} +  ${major_version} +  ${buildnumber}

node{ 
  stage('cloning repo'){
  checkout scm
}
  stage('Testing')
{
sh 'ls -la'
echo "Building test ${appName} with version ${major_version}"
sh 'mvn clean test'  
}
  stage('Building')
  {
    sh 'ls -lart'
    echo "Building the application ${appName} with version ${major_version}"
    sh 'mvn clean install'
  }
  stage('App rename')
  {
    echo "Renaming the application jar file name"
    sh "mv $WORKSPACE/target/jb*.jar $WORKSPACE/target/${file_name}.jar"
  }
}
